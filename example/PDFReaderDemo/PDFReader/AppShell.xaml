<?xml version="1.0" encoding="UTF-8" ?>
<Shell
  x:Class="PDFReader.AppShell"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:local="clr-namespace:PDFReader"
  xmlns:v="clr-namespace:PDFReader.View"
  Shell.FlyoutBehavior="Disabled">

  <Shell.Resources>
    <Style x:Key="Stylenamehere" TargetType="Element">
      <Setter Property="Shell.BackgroundColor" Value="White" />
      <Setter Property="Shell.TitleColor" Value="Black" />
    </Style>
  </Shell.Resources>


  <ShellContent
    ContentTemplate="{DataTemplate v:HomePage}"
    Route="MainPage"
    Style="{StaticResource Stylenamehere}" />
</Shell>
